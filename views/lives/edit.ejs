<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Update <em><%= view.name %></em></h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/life/<%= view._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="life[name]" value="<%= view.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="life[image]" value="<%= view.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="life[description]" value="<%= view.description %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Go!</button>
                </div>
            </form>
            <a href="/life">Back to homepage</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>