<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
           <h1>Enjoy and Share Life!</h1>
            <p>Happiness is to share</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/life/new">Share a life</a>
            </p>
            <form action="/life" method="GET" class="form-inline" id="lifeSearch">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Search a life" class="form-control">
                    <input type="submit" value="search" class="btn btn-default">
                </div>
            </form>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% views.forEach(function(view){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= view.image %>">
                    <div class="caption">
                        <h4><%= view.name %></h4>
                    </div>
                    <p>
                        <a href="/life/<%= view._id %>" class="btn btn-primary">More</a>
                    </p>
                </div>
            </div>
        <% }); %> 
    </div>
</div>

<% include ../partials/footer %>