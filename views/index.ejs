<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
           <h1>Enjoy and Share Life!</h1>
            <p>Happiness is to share.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/life/new">Share your new life!</a>
            </p> 
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% views.forEach(function(view){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= view.image %>">
                    <div class="caption">
                        <h4><%= view.name %></h4>
                    </div>
                    <p>
                        <a href="/life/<%= view._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %> 
    </div>
</div>

<% include partials/footer %>